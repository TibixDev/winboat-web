---
import feat_dash from "../assets/features/feat_dash.png";
import feat_install from "../assets/features/feat_install.png";
import feat_apps from "../assets/features/feat_apps.png";
import feat_fs from "../assets/features/feat_fs.png";
import feat_misc from "../assets/features/feat_misc.png";
import FeatureCard from "./FeatureCard.astro";

const features = [
  {
    title: "Elegant Interface",
    description: "WinBoat provides a sleek and intuitive interface that seamlessly integrates Windows into your Linux desktop environment, making it feel like a native experience.",
    iconName: "fluent:apps-list-detail-32-filled",
    imageSrc: feat_dash.src,
    imageAlt: "Dashboard Feature",
    reverse: false
  },
  {
    title: "Automated Installs", 
    description: "Installing Windows via WinBoat is a delightfully simple process all done through our interface. Pick your preferences & specs and let us handle the rest.",
    iconName: "fluent:box-32-filled",
    imageSrc: feat_install.src,
    imageAlt: "Installation Feature",
    reverse: true
  },
  {
    title: "Run Any App",
    description: "If it runs on Windows, it can run on WinBoat. Enjoy the full range of Windows applications, from productivity tools to entertainment, all within your Linux environment as native OS-level windows.",
    iconName: "fluent:apps-32-filled", 
    imageSrc: feat_apps.src,
    imageAlt: "Applications Feature",
    reverse: false
  },
  {
    title: "Filesystem Integration",
    description: "Accessing your Linux filesystem from Windows is a breeze. Your home directory is mounted in Windows, allowing you to easily share files between the two systems without any hassle.",
    iconName: "fluent:hard-drive-32-filled",
    imageSrc: feat_fs.src,
    imageAlt: "Filesystem Feature", 
    reverse: true
  },
    {
    title: "And many more...",
    description: "There's tons more you can do with WinBoat, for example smartcard passthrough and resource monitoring. We're always looking to add more features, so stay tuned for updates!",
    iconName: "fluent:sparkle-32-filled",
    imageSrc: feat_misc.src,
    imageAlt: "Additional WinBoat Features", 
    reverse: false
  }
];
---

<section id="features">
  <h2 class="text-2xl 2xl:text-5xl font-semibold mb-12 text-center">
    <span class="text-transparent bg-clip-text bg-gradient-to-r from-transparent to-indigo-400">FFFFF/</span><!--
    -->Features<!--
    --><span class="text-transparent bg-clip-text bg-gradient-to-l from-transparent to-indigo-400">/sssss</span>
  </h2>
  <div class="flex flex-col gap-6 items-center">
    {features.map((feature) => (
      <FeatureCard {...feature} />
    ))}
  </div>
</section>